<UserControl x:Class="DMASS.AuthorTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMASS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,26,0,0" TextWrapping="Wrap" Text="{Binding Author.Author.FirstName, Mode=OneWay}" VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,68,0,0" TextWrapping="Wrap" Text="{Binding Author.Author.LastName, Mode=OneWay}" VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center"/>
        <Label Content="Vorname" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Height="23" Width="70"/>
        <Label Content="Nachname" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Height="23" Width="70"/>

    </Grid>
</UserControl>
